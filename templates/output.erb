<%# Add a blank line before this block %>
<Output <%= @name %>>
  Module      <%= scope['nxlog::output_module'] %>
  <%- if scope['nxlog::output_file_path'] -%>
  File        '<%= scope['nxlog::output_file_path'] %>'
  <%- elsif scope['nxlog::output_address'] -%>
  Host        <%= scope['nxlog::output_address'] %>
  <%- end -%>
  <%- if scope['nxlog::output_address'] && scope['nxlog::output_port'] -%>
  Port        <%= scope['nxlog::output_port'] %>
  <%- end -%>
  <%- if scope['nxlog::output_execs'] -%>
    <%- scope['nxlog::output_execs'].each do |exec| %>
  Exec        <%= "#{exec};" -%>
    <%- end -%>
  <%- end %>
<% if scope['nxlog::output_options'] %>
<% scope['nxlog::output_options'].each do |output_option| -%><%="  #{output_option}" %>
<% end %>
<% end %></Output>
