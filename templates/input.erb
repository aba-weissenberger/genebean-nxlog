<%# Add a blank line before this block %>
<Input <%= @name %>>
  Module      <%= scope['nxlog::input_module'] -%>
  <%- if scope['nxlog::input_execs'] -%>
    <%- scope['nxlog::input_execs'].each do |exec| %>
  Exec        <%= "#{exec};" -%>
    <%- end -%>
  <%- end %>
  <%- if scope['nxlog::input_file_path'] -%>
  File        '<%= scope['nxlog::input_file_path'] %>'
  <%- end %>
  <%- if scope['nxlog::input_type'] -%>
  InputType   '<%= scope['nxlog::input_type'] %>' %>
  <%- end %>
</Input>
